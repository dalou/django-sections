    oh();


&.sections-modal
    dn(); m(0, auto); bs-lt(); bg(white); tal(); rad(10,10,10,10); wr(auto,auto,600,600); rl(); z(1000001);
    cur(default)
    &.in
        db();

    .sections-modal-head, .sections-modal-header
        p(20, 20); tal(); fs(18); fg(#666666); rad(10,10,0,0); bb(1,solid,#F0F0F0)


    .sections-modal-foot, .sections-modal-footer
        p(20,20); cl(); rad(0,0,10,10); bg(#F0F0F0);
        .button2, .button
            ml(7);

    .sections-modal-content
        p(20, 20); cl();

    .sections-modal-close
        ab(5,12,,,10000); wh(30); db(); fg(grey-dk); tr-cl(); fs(30); cur(pointer);
        &:hover
            fg(white);
        &.black
            fg(black);
            &:hover
                fg(white);

modal-colorize(color-name, color)
    {"&."+color-name}
        .sections-modal-head, .sections-modal-title, .sections-modal-foot
            bg(color);

modal-colorize('blue', blue);
modal-colorize('teal', teal);
