    fx(0,0,0,0,1000000); bg(rgba(52, 73, 94, 0.51)); wh(100%); vam();  op(0); tr-cl(); cur(pointer);
    overflow:auto;
    &.in
        op(1);

    &.loading
        tac();

    .___modal_wrapper
        rl(); tac(); m(10); ts(translate3d(0,-55%,0)); op(1); tr-cl();//bs(0 0 10px #000);
        @media screen-md-min
            m(30,auto);
        &.in
            op(1); ts(translate3d(0,0,0));

